<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B4A4E"
    tools:context=".api.ItemDetails">

    <ImageView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_170sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/itachi"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/imageAnime"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:text="Naruto"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:id="@+id/tvChoosenAnime"
        android:textColor="@color/white"
        android:lines="1"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintStart_toEndOf="@+id/imageAnime"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvType"
        android:text="type"
        app:layout_constraintTop_toBottomOf="@+id/tvChoosenAnime"
        app:layout_constraintStart_toStartOf="@+id/tvChoosenAnime"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:lines="1"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRank"
        android:text="Rank"
        app:layout_constraintTop_toBottomOf="@+id/tvType"
        app:layout_constraintStart_toStartOf="@+id/tvChoosenAnime"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:lines="1"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScore"
        android:text="Score"
        app:layout_constraintTop_toBottomOf="@+id/tvRank"
        app:layout_constraintStart_toStartOf="@+id/tvChoosenAnime"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:lines="1"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMember"
        android:text="Members"
        app:layout_constraintTop_toBottomOf="@+id/tvScore"
        app:layout_constraintStart_toStartOf="@+id/tvChoosenAnime"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:lines="1"
        android:textColor="@color/white"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/btnUrl"
        android:text="Go to enjoy with it"
        android:textAllCaps="false"
        android:onClick="navigateToWeb"
        app:icon="@drawable/icons8_hinata_60"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageAnime"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_170sdp"
        android:src="@drawable/icons8_enjoy_100"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>